<p id="notice"><%= notice %></p>

<div id="articles_container">
  <h1>Listing Articles</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="articles_index">
      <% @articles.each do |article| %>
        <tr class="article" id="article-<%= article.id %>">
          <td><%= article.title %></td>
          <td><%= markdown(article.body) %></td>
          <td><%= link_to 'Show', article %></td>
          <% if policy(@articles).update? %>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <% end %>
          <% if policy(@articles).destroy? %>
            <td><%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<% if policy(@articles).create? %>
  <%= link_to 'New Article', new_article_path, id: :new_link, remote: true %>
<% end %>
