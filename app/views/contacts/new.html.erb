<div class="container">
  <h1>Contact</h1>

  <%= simple_form_for @contact do |f| %>
    <%= f.input :name, required: true %>
    <%= f.input :email, required: true %>
    <%= f.input :message, as: :text, required: false, input_html: {rows: 10} %>

    <%= f.button :submit, 'Send Message', class: 'btn btn-primary' %>
  <% end %>
</div>
